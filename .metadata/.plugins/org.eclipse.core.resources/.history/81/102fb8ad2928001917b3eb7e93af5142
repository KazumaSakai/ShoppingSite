    border-right: 1px solid white;
    border-bottom: 1px solid white;
    
    -webkit-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    transform: rotate(45deg) translateY(-5px);
}

/* <ul>がhoverなら、すべての<li>を可視化 */
