<struts>
	<constant name="struts.devMode" value="true" />
	<package name="com.internousdev.ShoppingSite.action" extends="struts-default">

		<action name="LoginAction" class="com.internousdev.ShoppingSite.action.LoginAction" method="execute">
			<result name="success">loginSuccess.jsp</result>
			<result name="error">loginError.jsp</result>
		</action>

		<action name="LogoutAction" class="com.internousdev.ShoppingSite.action.LogoutAction" method="execute">
			<result name="success">logoutSuccess.jsp</result>
		</action>

		<action name="GoHomeAction" class="com.internousdev.ShoppingSite.action.GoHomeAction" method="execute">
			<result name="success">index.jsp</result>
		</action>

		<action name="GoLoginAction" class="com.internousdev.ShoppingSite.action.GoLoginAction" method="execute">
			<result name="success">login.jsp</result>
		</action>

		<action name="ItemListAction" class="com.internousdev.ShoppingSite.action.ItemListAction" method="execute">
			<result name="success">itemList.jsp</result>
		</action>

		<action name="AddItemAction" class="com.internousdev.ShoppingSite.action.AddItemAction" method="execute">
			<result name="success" type="chain">ItemListAction</result>
			<result name="error"  type="chain">ItemListAction</result>
		</action>

		<action name="MyCartAction" class="com.internousdev.ShoppingSite.action.MyCartAction" method="execute">
			<result name="success">myCart.jsp</result>
			<result name="needLogin">login.jsp</result>
		</action>

		<action name="DeleteItemAction" class="com.internousdev.ShoppingSite.action.DeleteItemAction" method="execute">
			<result name="success" type="chain">MyCartAction</result>
			<result name="error" type="chain">MyCartAction</result>
		</action>

		<action name="BuyCartItemAction" class="com.internousdev.ShoppingSite.action.BuyCartItemAction" method="execute">
			<result name="success">confirmBuyCartItem.jsp</result>
			<result name="error">confirmBuyCartItem</result>
		</action>

	</package>
</struts>