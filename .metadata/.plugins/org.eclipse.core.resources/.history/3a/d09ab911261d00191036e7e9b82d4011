package com.internousdev.ShoppingSite.oauth;

import java.net.HttpURLConnection;
import java.net.URL;

import com.internousdev.ShoppingSite.util.Passworder;

public class GoogleOAuth {
	private static final String client_id = "34746352072-tv6neqgl7uhuqutiqm5e93e4sbhn43li.apps.googleusercontent.com";
	private static final String client_secret = "_H9AFED1Qxt4rcgYCgHaLtEp ";
	
	public static String login(String redirect_uri)
	{
		try
		{
			String steteToken = Passworder.Random();
			
			URL cUrl = new URL("https://accounts.google.com/o/oauth2/auth?client_id=" + client_id
					+ "&redirect_uri=" + redirect_uri
					+ "&scope=https://www.googleapis.com/auth/userinfo.profile"
					+ "&response_type=code"
					+ "&state=" + steteToken);
			System.out.println(message);
			
			HttpURLConnection connection = (HttpURLConnection)cUrl.openConnection();

			connection.setRequestMethod("GET");
			connection.setDoOutput(true);
			connection.setInstanceFollowRedirects(true);
			int responce = connection.getResponseCode();
			String message = connection.getResponseMessage();
			System.out.println(message);
		}
		catch (Exception e) 
		{
			e.printStackTrace();
		}
		
		return null;
	}
}
