function start()
{
	canvas = document.getElementById('canvas_e');
	ctx = canvas.getContext('2d');
	timerID = setInterval('draw()', 100);
	
}
function draw() {
	20		count1++;
	21		if (count1 > 10) {
	22			count2++;
	23			if (count2 > 4)
	24				stop();
	25			else {
	26				r      = 10;
	27				count1 = 1;
	28				ctx.clearRect(0, 0, canvas.width, canvas.height);
	29			}
	30		}
	31		ctx.beginPath();
	32		ctx.arc(0, 0, r, Math.PI*1.5, Math.PI*2, true);
	33		ctx.stroke();
	34		r = 1.5 * r;   // r *= 1.5; でも可
	35	}
	36				//
	37				// 停止
	38				//
	39	function stop()
	40	{
	41		clearInterval(timerID);
	42		ctx.clearRect(0, 0, canvas.width, canvas.height);
	43		timerID = -1;
	44	}