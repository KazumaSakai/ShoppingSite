<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<!-- DevMode -->

	<constant name="struts.devMode" value="true" />




	<!-- Admin -->

	<package name="com.internousdev.ShoppingSite.action.admin" extends="struts-default">

		<action name="AdminAddItemAction" class="com.internousdev.ShoppingSite.action.admin.AdminAddItemAction" method="execute">
			<result name="success" type="chain">ItemListAction</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="notAdmin">./Admin/notAdmin.jsp</result>
			<result name="error" type="chain">GoAdminAddItemAction</result>
		</action>

		<action name="AdminAddItemQuantityAction" class="com.internousdev.ShoppingSite.action.admin.AdminAddItemQuantityAction" method="execute">
			<result name="success" type="chain">AdminUpdateItemInfoAction</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="notAdmin">./Admin/notAdmin.jsp</result>
		</action>

		<action name="AdminDeleteItemAction" class="com.internousdev.ShoppingSite.action.admin.AdminDeleteItemAction" method="execute">
			<result name="success" type="chain">ItemListAction</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="notAdmin">./Admin/notAdmin.jsp</result>
		</action>

		<action name="AdminDeleteUserAction" class="com.internousdev.ShoppingSite.action.admin.AdminDeleteUserAction" method="execute">
			<result name="success" type="chain">AdminUserListAction</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="notAdmin">./Admin/notAdmin.jsp</result>
		</action>

		<action name="AdminPurchaseHistoryAction" class="com.internousdev.ShoppingSite.action.admin.AdminPurchaseHistoryAction" method="execute">
			<result name="success">./Admin/purchaseHistory.jsp</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="notAdmin">./Admin/notAdmin.jsp</result>
		</action>

		<action name="AdminPurchaseHistoryDeleteAction" class="com.internousdev.ShoppingSite.action.admin.AdminPurchaseHistoryDeleteAction" method="execute">
			<result name="success" type="chain">AdminPurchaseHistoryAction</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="notAdmin">./Admin/notAdmin.jsp</result>
			<result name="error" type="chain">AdminPurchaseHistoryAction</result>
		</action>

		<action name="AdminUpdateItemAction" class="com.internousdev.ShoppingSite.action.admin.AdminUpdateItemAction" method="execute">
			<result name="success" type="chain">ItemPageAction</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="notAdmin">./Admin/notAdmin.jsp</result>
		</action>

		<action name="AdminUpdateItemInfoAction" class="com.internousdev.ShoppingSite.action.admin.AdminUpdateItemInfoAction" method="execute">
			<result name="success">./Admin/adminUpdateItem.jsp</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="notAdmin">./Admin/notAdmin.jsp</result>
		</action>

		<action name="AdminUserListAction" class="com.internousdev.ShoppingSite.action.admin.AdminUserListAction" method="execute">
			<result name="success">./User/userList.jsp</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="notAdmin">./Admin/notAdmin.jsp</result>
		</action>

	</package>





	<!-- Go -->

	<package name="com.internousdev.ShoppingSite.action.go" extends="struts-default">

		<action name="" class="com.internousdev.ShoppingSite.action.go.GoHomeAction" method="execute">
			<result name="success">./index.jsp</result>
		</action>

		<action name="GoHomeAction" class="com.internousdev.ShoppingSite.action.go.GoHomeAction" method="execute">
			<result name="success">./index.jsp</result>
		</action>

		<action name="GoSortAction" class="com.internousdev.ShoppingSite.action.go.GoSortAction" method="execute">
			<result name="success">./JavaScript/sortView.jsp</result>
		</action>

		<action name="GoLoginAction" class="com.internousdev.ShoppingSite.action.go.GoLoginAction" method="execute">
			<result name="success">./Login/login.jsp</result>
		</action>

		<action name="GoSignUpAction" class="com.internousdev.ShoppingSite.action.go.GoSignUpAction" method="execute">
			<result name="success">./SignUp/signup.jsp</result>
		</action>

		<action name="GoUserPageAction" class="com.internousdev.ShoppingSite.action.go.GoUserPageAction" method="execute">
			<result name="success">./User/userPage.jsp</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
		</action>

		<action name="GoUserInfoAction" class="com.internousdev.ShoppingSite.action.go.GoUserInfoAction" method="execute">
			<result name="success">./User/userInfo.jsp</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
		</action>

		<action name="GoAdminAction" class="com.internousdev.ShoppingSite.action.go.GoAdminAction" method="execute">
			<result name="success">./Admin/admin.jsp</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="notAdmin">./Admin/notAdmin.jsp</result>
		</action>

		<action name="GoSalesDataAction" class="com.internousdev.ShoppingSite.action.go.GoSalesDataAction" method="execute">
			<result name="success">./Admin/itemSalesData.jsp</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="notAdmin">./Admin/notAdmin.jsp</result>
		</action>

		<action name="GoAdminAddItemAction" class="com.internousdev.ShoppingSite.action.go.GoAdminAddItemAction" method="execute">
			<result name="success">./Admin/adminAddItem.jsp</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="notAdmin">./Admin/notAdmin.jsp</result>
		</action>

		<action name="GoBuyAction" class="com.internousdev.ShoppingSite.action.go.GoBuyAction" method="execute">
			<result name="success">./MyCart/buyItemAddressSelect.jsp</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
		</action>

		<action name="GoAddAddressAction" class="com.internousdev.ShoppingSite.action.go.GoAddAddressAction" method="execute">
			<result name="success">./User/addAddress.jsp</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
		</action>

	</package>





	<!-- Item -->

	<package name="com.internousdev.ShoppingSite.action.item" extends="struts-default">

		<action name="ItemListAction" class="com.internousdev.ShoppingSite.action.item.ItemListAction" method="execute">
			<result name="success">./Item/itemList.jsp</result>
		</action>

		<action name="AddItemAction" class="com.internousdev.ShoppingSite.action.item.AddItemAction" method="execute">
			<result name="success" type="chain">MyCartAction</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="error" type="chain">ItemListAction</result>
		</action>

		<action name="ItemPageAction" class="com.internousdev.ShoppingSite.action.item.ItemPageAction" method="execute">
			<result name="success">./Item/itemPage.jsp</result>
		</action>

		<action name="PostItemReviewAction" class="com.internousdev.ShoppingSite.action.item.PostItemReviewAction" method="execute">
			<result name="success">./Review/confirmPostReview.jsp</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="error" type="chain">ItemPageAction</result>
		</action>

		<action name="DeleteItemReviewAction" class="com.internousdev.ShoppingSite.action.item.DeleteItemReviewAction" method="execute">
			<result name="success">./Review/confirmDeleteReview.jsp</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="error">./Review/errorDeleteReview.jsp</result>
		</action>

		<action name="ItemSalesAction" class="com.internousdev.ShoppingSite.action.item.ItemSalesAction" method="execute">
			<result name="success">./JavaScript/salesData.jsp</result>
			<result name="notAdmin">./Admin/notAdmin.jsp</result>
		</action>


	</package>





	<!-- Google -->

	<package name="com.internousdev.ShoppingSite.action.google" extends="struts-default">

		<action name="GoogleSignUpAction" class="com.internousdev.ShoppingSite.action.google.GoogleSignUpAction" method="execute">
			<result name="success" >./SignUp/confirmSignUp.jsp</result>
			<result name="error">./SignUp/errorSignUp.jsp</result>
		</action>

		<action name="GoogleLoginAction" class="com.internousdev.ShoppingSite.action.google.GoogleLoginAction" method="execute">
			<result name="success">./Login/loginSuccess.jsp</result>
			<result name="error">./Login/loginError.jsp</result>
		</action>

		<action name="StartGoogleOAuthAction" class="com.internousdev.ShoppingSite.action.google.StartGoogleOAuthAction" method="execute">
			<result name="redirect" type="redirect">
				<param name="location">${url}</param>
			</result>
		</action>

	</package>





	<!-- Cart -->

	<package name="com.internousdev.ShoppingSite.action.cart" extends="struts-default">

		<action name="MyCartAction" class="com.internousdev.ShoppingSite.action.cart.MyCartAction" method="execute">
			<result name="success">./MyCart/myCart.jsp</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
		</action>

		<action name="ChangeCartItemQuantityAction" class="com.internousdev.ShoppingSite.action.cart.ChangeCartItemQuantityAction" method="execute">
			<result name="toCart" type="chain">MyCartAction</result>
			<result name="toItemList" type="chain">ItemListAction</result>
			<result name="error" type="chain">MyCartAction</result>
		</action>

		<action name="BuyCartItemAction" class="com.internousdev.ShoppingSite.action.cart.BuyCartItemAction" method="execute">
			<result name="success">./MyCart/confirmBuyCartItem.jsp</result>
			<result name="error">./User/buyItemAddressSelect</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
		</action>

	</package>





	<!-- User -->

	<package name="com.internousdev.ShoppingSite.action.user" extends="struts-default">

		<action name="ChangeUserNameAction" class="com.internousdev.ShoppingSite.action.user.ChangeUserNameAction" method="execute">
			<result name="success" type="chain">GoUserInfoAction</result>
			<result name="error" type="chain">GoUserInfoAction</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
		</action>

		<action name="ChangeUserPasswordAction" class="com.internousdev.ShoppingSite.action.user.ChangeUserPasswordAction" method="execute">
			<result name="success" type="chain">GoUserInfoAction</result>
			<result name="error" type="chain">GoUserInfoAction</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
		</action>

		<action name="AddAddressAction" class="com.internousdev.ShoppingSite.action.user.AddAddressAction" method="execute">
			<result name="goBuy" type="chain">GoBuyAction</result>
			<result name="success">./User/addAddress.jsp</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="error" type="chain">GoAddAddressAction</result>
		</action>

	</package>





	<!-- User Login -->

	<package name="com.internousdev.ShoppingSite.action.user.login" extends="struts-default">

		<action name="LoginAction" class="com.internousdev.ShoppingSite.action.user.login.LoginAction" method="execute">
			<result name="success">./Login/loginSuccess.jsp</result>
			<result name="redirectAction" type="chain">${ redirectAction }</result>
			<result name="error" type="chain">GoLoginAction</result>
		</action>

		<action name="LogoutAction" class="com.internousdev.ShoppingSite.action.user.login.LogoutAction" method="execute">
			<result name="success">./Login/logoutSuccess.jsp</result>
		</action>

	</package>





	<!-- User SignUp -->

	<package name="com.internousdev.ShoppingSite.action.user.signup" extends="struts-default">

		<action name="SignUpAction" class="com.internousdev.ShoppingSite.action.user.signup.SignUpAction" method="execute">
			<result name="success">./SignUp/confirmSignUp.jsp</result>
			<result name="error" type="chain">GoSignUpAction</result>
		</action>

	</package>





	<!-- PurchaseHistory -->

	<package name="com.internousdev.ShoppingSite.action.purchaseHistory" extends="struts-default">

		<action name="MyPurchaseHistoryAction" class="com.internousdev.ShoppingSite.action.purchaseHistory.MyPurchaseHistoryAction" method="execute">
			<result name="success">./MyCart/purchaseHistory.jsp</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
		</action>

		<action name="PurchaseHistoryDeleteAction" class="com.internousdev.ShoppingSite.action.purchaseHistory.PurchaseHistoryDeleteAction" method="execute">
			<result name="success" type="chain">MyPurchaseHistoryAction</result>
			<result name="needLogin" type="chain">GoLoginAction</result>
			<result name="error" type="chain">MyPurchaseHistoryAction</result>
		</action>

	</package>





	<!-- Seller -->

	<package name="com.internousdev.ShoppingSite.action.seller" extends="struts-default">

		<action name="SellerAction" class="com.internousdev.ShoppingSite.action.seller.SellerAction" method="execute">
			<result name="success">./Seller/seller.jsp</result>
		</action>

	</package>

</struts>
